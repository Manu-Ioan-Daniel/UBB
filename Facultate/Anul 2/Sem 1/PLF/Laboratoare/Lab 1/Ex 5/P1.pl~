%sterge(L:lista,E:element,Rez:lista)
%model de flux (i,i,o)
sterge([],_,[]).
sterge([H|T],E,Rez):-H=E,sterge(T,E,Rez).
sterge([H|T],E,Rez):-H\=E,sterge(T,E,Rez2),Rez=[H|Rez2].
%nrAparitii(L:lista,E:element,Rez:intreg)
%model de flux(i,i,o)
nrAparitii([],_,0).
nrAparitii([H|T],E,Rez):-
    H=E,
    nrAparitii(T,E,Rez2),
    Rez is Rez2+1.
nrAparitii([H|T],E,Rez):-
    H\=E,
    nrAparitii(T,E,Rez).
%listaPerechi(L:lista,Rez:lista)
%model de flux(i,o)
listaPerechi([],[]).
listaPerechi(L,Rez):-
    L=[H|_],
    nrAparitii(L,H,NrAp),
    sterge(L,H,L2),
    listaPerechi(L2,Rez2),
    Rez=[[H,NrAp]|Rez2],!.
%cazuri de testare
%listaPerechi([1,2,3],Rez).
%Rez=[[1,1],[2,1],[3,1]].
%listaPerechi([],Rez).
%Rez=[].
%listaPerechi([0,1,-1,2,1,0,3,4,3],Rez).
%Rez = [[0, 2], [1, 2], [-1, 1], [2, 1], [3, 2], [4, 1]].
