<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="451.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.WindowController">
   <children>
      <Label fx:id="usernameLabel" alignment="CENTER" maxWidth="1.7976931348623157E308" text="Label">
         <font>
            <Font size="33.0" />
         </font></Label>
      <TableView fx:id="offersTable" prefHeight="200.0" prefWidth="200.0">
        <columns>
          <TableColumn fx:id="hotelNameColumn" prefWidth="75.0" text="Hotel Name" />
          <TableColumn fx:id="locationNameColumn" prefWidth="75.0" text="Location Name" />
            <TableColumn fx:id="startDateColumn" prefWidth="75.0" text="Start Date" />
            <TableColumn fx:id="endDateColumn" prefWidth="75.0" text="End Date" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
      <TextField fx:id="numberOfNightsField" alignment="CENTER" promptText="Number of Nights">
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
         <font>
            <Font size="15.0" />
         </font>
      </TextField>
      <DatePicker fx:id="reservationDatePicker" maxWidth="1.7976931348623157E308" prefHeight="30.0">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </DatePicker>
      <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleReservation" prefHeight="50.0" text="Rezervare">
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
